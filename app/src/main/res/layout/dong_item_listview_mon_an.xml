<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewMonan"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="3dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:textColor="#f20"
        android:id="@+id/textviewTenMonan"
        android:layout_margin="3dp"
        android:textSize="35sp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:text="Ten mon an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewTenMonan"
        android:textColor="#5883e1"
        android:id="@+id/textviewGiaMonan"
        android:layout_margin="3dp"
        android:textSize="28sp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:text="Gia mon an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>